<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#AE590A"
    tools:context=".ListMedicine">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_curve"
        android:elevation="4dp"
        android:outlineAmbientShadowColor="#343341"
        android:outlineSpotShadowColor="#343341"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/logo1" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="60dp"

                android:layout_toEndOf="@id/user_image"
                android:fontFamily="sans-serif"
                android:text="Order Medicine"
                android:textColor="#AE590A"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/temp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/dish_img1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-10.5dp"
            android:layout_marginTop="-10.1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"></ImageView>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:text="Prescription Review"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="-30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/hori_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Medicines"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Quantity"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Pricing"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="AMdihfldfe"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="5pc"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="$230"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="AMdihfldfe"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="5pc"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="$230"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Total Cost"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="$460"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/hori_line"/>

</LinearLayout>